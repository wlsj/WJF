<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:tl="http://schemas.android.com/apk/res-auto"
              android:id="@+id/activity_main"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#F14E6D"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微积分"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_marginLeft="170dp"
            android:layout_gravity="center" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
            android:src="@drawable/search"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/tablayout11"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#3F4867"
            tl:tl_indicator_margin_left="1dp"
            tl:tl_indicator_margin_right="1dp"
            tl:tl_indicator_style="BLOCK"
            tl:tl_indicator_color="#f14e6d"
            tl:tl_textAllCaps="true"
            tl:tl_textBold="BOTH"
            tl:tl_textsize="14sp"
            tl:tl_textSelectColor="#fff"
            tl:tl_textUnselectColor="#fff" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>
    </LinearLayout>


</LinearLayout>