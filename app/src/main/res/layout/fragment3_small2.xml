            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="52.00"
            android:textColor="#4b4b4b"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="#404767"
            android:gravity="center"
            android:text="支付"
            android:textSize="16sp"
            />

    </LinearLayout>


    <ImageView
        android:id="@+id/tiao3"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/shangpin2"
        android:background="@drawable/game_default_banner"
        />


    <ImageView
        android:id="@+id/tiao4"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/shangpin3"
        android:background="@drawable/game_default_banner"
        />


    <LinearLayout
        android:id="@+id/shangpin4"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:layout_below="@+id/tiao4"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:src="@drawable/yingyong_imag4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国家地理"
            android:textColor="#4b4b4b"
            android:textSize="16sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="70.00/年"
            android:textColor="#4b4b4b"
            android:textSize="16sp"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="20.00"
            android:textColor="#4b4b4b"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="52.00"
            android:textColor="#4b4b4b"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="#afafaf"
            android:gravity="center"
            android:text="支付"
            android:textSize="16sp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/zhifuxinxi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/shangpin4"
        android:background="@drawable/game_default_banner"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总计:已支付金额"
                android:textColor="#6c7187"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125.00"
                android:textColor="#f04564"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=",需支付金额"
                android:textColor="#6c7187"
                android:textSize="16sp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="240.00"
                android:textColor="#f04564"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="。"
                android:textColor="#6c7187"
                android:textSize="16sp"
                />


        </LinearLayout>

<LinearLayout
    android:background="#f04e6c"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="全部支付"
        android:textSize="18sp"


        />


</LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/shangpin3"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_below="@+id/tiao3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:src="@drawable/yingyong_imag3"
            android:id="@+id/imageView9"/>

        <TextView
            android:layout_width="wrap_content"
