<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff">


    <LinearLayout
        android:id="@+id/mingcheng"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应用名称"
            android:textColor="#b5b5b5"
            android:textSize="16sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="价格"
            android:textColor="#b5b5b5"
            android:textSize="16sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="已付金额"
            android:textColor="#b5b5b5"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="需付金额"
            android:textColor="#b5b5b5"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="支付"
            android:textColor="#b5b5b5"
            android:textSize="16sp"
            />

    </LinearLayout>


    <ImageView
        android:id="@+id/tiao1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/mingcheng"
        android:background="@drawable/game_default_banner"
        />


    <LinearLayout
        android:id="@+id/shangpin1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/tiao1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:src="@drawable/yingyong_imag1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国家地理"
            android:textColor="#4b4b4b"
            android:textSize="16sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="70.00/年"
            android:textColor="#4b4b4b"
            android:textSize="16sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="20.00"
            android:textColor="#4b4b4b"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="52.00"
            android:textColor="#4b4b4b"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="#404767"
            android:gravity="center"
            android:text="支付"
            android:layout_gravity="right|center_vertical"
            android:textSize="16sp"
            android:id="@+id/textView4"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/tiao2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/shangpin1"
        android:background="@drawable/game_default_banner"
        />


    <LinearLayout
        android:id="@+id/shangpin2"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:layout_below="@+id/tiao2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:src="@drawable/yingyong_imag2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国家地理"
            android:textColor="#4b4b4b"
