<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="#ffffff"
              android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/mingxi1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/mingxi1"
            android:id="@+id/imageView10"/>
    </LinearLayout>


<ImageView
    android:id="@+id/tiaoo1"
    android:layout_below="@id/mingxi1"
    android:layout_width="match_parent"
    android:background="#f8f8f8"
    android:layout_height="10dp"/>

<LinearLayout
    android:id="@+id/zongyue"
    android:layout_below="@id/tiaoo1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:paddingLeft="30dp"
    android:layout_height="60dp">


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总余额"
        android:textColor="#5d637c"
        android:textSize="14sp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#1e1d2e"
        android:text="98.00"
        />

</LinearLayout>


    <ImageView
        android:id="@+id/tiaoo2"
        android:layout_below="@+id/zongyue"
        android:layout_width="match_parent"
        android:background="#f8f8f8"
        android:layout_height="10dp"/>


    <LinearLayout
        android:id="@+id/zongyue1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingLeft="30dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tiaoo2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="账户余额"
              android:textColor="#5d637c"
              />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="信用余额"
                    android:textColor="#5d637c"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计广告收入"
                    android:textColor="#5d637c"

                    />

            </LinearLayout>



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="88.00"
                    android:textColor="#1e1d2e"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.00"
                    android:textColor="#1e1d2e"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="698.00"
                    android:textColor="#1e1d2e"

                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:background="#f9f9f9"
        android:layout_height="match_parent"
        android:layout_below="@+id/zongyue1"
        android:gravity="center_horizontal"
       >

        <LinearLayout
            android:id="@+id/zhuan"
            android:layout_width="350dp"
            android:background="#6799fd"
            android:gravity="center"
            android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转入银行卡"
            android:textSize="16sp"
            />



        </LinearLayout>




    </LinearLayout>


</RelativeLayout>
